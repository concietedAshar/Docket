<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/white">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/dock3t"
        android:id="@+id/splash_logo"
        android:transitionName="splash_logo_trans"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:text ="Welcome"
        android:id="@+id/welcome"
        android:transitionName="docket_name_trans"
        android:textColor="@color/Background"
        android:fontFamily="@font/aldrich"
        android:layout_marginTop="-5dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/slogan"
        android:text="@string/slogan"
        android:transitionName="slogan"
        android:textColor="@color/black"
        android:fontFamily="@font/aldrich"
        android:textSize="18sp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="-10dp"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"

        >

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/full_name"
            android:hint="Full Name"
            android:textColorHint="@color/black"
            app:boxStrokeColor="@color/Background_variant"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/Background"
                android:fontFamily="@font/aldrich"
                android:inputType="textPersonName"

                >

            </com.google.android.material.textfield.TextInputEditText>

        </com.google.android.material.textfield.TextInputLayout>
        <!-- UserNmae/email -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/email"
            android:hint="Email"
            android:transitionName="email"
            android:textColorHint="@color/black"
            app:boxStrokeColor="@color/Background_variant"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/Background"
                android:fontFamily="@font/aldrich"
                android:inputType="textEmailAddress"

                >

            </com.google.android.material.textfield.TextInputEditText>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/password"
            android:transitionName="password"
            android:hint="Password"
            android:textColorHint="@color/black"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/black"
            app:boxStrokeColor="@color/Background_variant"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/aldrich"
                android:inputType="textPassword"

                android:textColor="@color/Background">

            </com.google.android.material.textfield.TextInputEditText>

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>


    <Button
        android:id="@+id/btnSignUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="-5dp"
        android:fontFamily="@font/aldrich"
        android:text="Sign Up"
        android:textColor="@color/white"
        android:transitionName="sign_button"

        />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnAlreadyUser"
        android:transitionName="btnUser"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="-10dp"
        android:background="#00000000"
        android:fontFamily="@font/aldrich"
        android:gravity="center"
        android:text="Already A user? Sign In"
        android:textColor="@color/black"
        android:textSize="12sp"
        />


</LinearLayout>